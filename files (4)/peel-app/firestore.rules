rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's peels
      match /peels/{peelId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's preferences
      match /preferences/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
